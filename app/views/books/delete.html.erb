
<h2>Delete Book</h2>

<%= form_for(@book, :method => 'delete') do |f| %>

    <p>Are you sure you want to delete this book?</p>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td><%= f.object.title %></td>
                <td><%= f.object.author %></td>
            </tr>
        </tbody>
    </table>

    <div class="form-buttons">
        <%= f.submit("Delete Book") %>
    </div>

<% end %>

<%= link_to 'Back', books_path %>